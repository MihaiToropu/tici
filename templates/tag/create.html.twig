{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Create Tag{% endblock %}

{% block body %}
    <h1 style="margin-top: 2%; margin-bottom: 3%; margin-left: 22%">Create new Tag</h1>
    <div class="container">
        <form action="{{ path('app_tag_new') }}" method="post">
        <div class="form-group">
            <label for="name">Title:</label>
            <input required type="text" name="name" class="form-control" id="name" placeholder="Name input">
        </div>
        <div class="form-group">
            <label for="slug">Slug:</label>
            <input required type="text" name="slug" class="form-control" id="slug" placeholder="Slug input">
        </div>
        <button class="btn btn-primary" style="margin-left: 1.3%"><a style="color: white" href="{{ path('tag_index') }}">Back to list</a></button>
        <button type="submit" value="Submit" class="btn btn-success" style="margin-left: 1.3%">Save</button>
    </form>
    </div>


{% endblock %}