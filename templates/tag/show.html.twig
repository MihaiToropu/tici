{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Tag Show{% endblock %}

{% block body %}
    <h1 style="margin-left: 23%; margin-top: 2%; margin-bottom: 3%;"> Tag {{ tag.name }}</h1>

    <div class="container" style="margin-top: 20px;">
        <div class="col-md-8">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tag.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td><a href="{{ path('tag_show', {'id': tag.id}) }}">{{ tag.name }}</a></td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ tag.slug }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ tag.createdAt ? tag.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <button class="btn btn-primary" style="margin-left: 21.3%"><a style="color: white" href="{{ path('tag_index') }}">Back to list</a></button>
    <button class="btn btn-danger" style="margin-left: 1.3%"><a style="color: white" href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a></button>
    <span style="margin-left: 20%">{{ include('tag/_delete_form.html.twig') }}</span>

{% endblock %}
