{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Category Show{% endblock %}

{% block body %}
    <h1 style="margin-left: 23%; margin-top: 2%; margin-bottom: 3%;"> Category {{ category.name }}</h1>

    <div class="container" style="margin-top: 20px;">
        <div class="col-md-8">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td><a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a></td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <button class="btn btn-primary" style="margin-left: 21.3%"><a style="color: white" href="{{ path('category_index') }}">Back to list</a></button>
    <button class="btn btn-danger" style="margin-left: 1.3%"><a style="color: white" href="{{ path('category_edit', {'id': category.id}) }}">edit</a></button>
    <span style="margin-left: 20%">{{ include('category/_delete_form.html.twig') }}</span>


{% endblock %}
