{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} New Company{% endblock %}

{% block body %}
    <h1 style="margin-top: 2%; margin-bottom: 3%; margin-left: 22%">Create new Company</h1>
    <div class="container">
        <div class="col-md-8">
            <form action="{{ path('company_new') }}" method="post">
                <div class="form-group">
                    <label for="name">Company Name:</label>
                    <input type="text" class="form-control" id="name"
                           placeholder="Company name" name="name">
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 3%">Submit</button>

                <button class="btn btn-primary" style="margin-left: 1.3%; margin-top: 3%"><a style="color: white" href="{{ path('app_homepage') }}">Back to list</a></button>
            </form>
        </div>
    </div>
{% endblock %}
